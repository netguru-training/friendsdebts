%h2 Log in
= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-group
    = f.input :email, required: false, autofocus: true, placeholder: 'Enter email', input_html: { class: 'form-control'}
  .form-group
    = f.input :password, required: false, placeholder: 'Password', input_html: { class: 'form-control' }
  .checkbox
    = f.input :remember_me, as: :boolean if devise_mapping.rememberable?
  .form-actions
    = f.button :submit, "Log in", class: 'btn btn-default'
= render "devise/shared/links"
