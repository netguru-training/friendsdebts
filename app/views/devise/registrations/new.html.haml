%h2 Sign up
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = f.error_notification
  .form-group
    = f.input :email, required: true, autofocus: true, placeholder: "Enter email", input_html: { class: 'form-control' }
  .form-group
    = f.input :password, required: true, placeholder: "Password", input_html: { class: 'form-control'}
  .form-group
    = f.input :password_confirmation, required: true, placeholder: "Password confirmation", input_html: { class: 'form-control'}
  .form-actions
    = f.button :submit, "Sign up", class: 'btn btn-default'
= render "devise/shared/links"
